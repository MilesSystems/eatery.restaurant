<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

{{^order}}

    <div class="callout callout-danger" style="margin-bottom: 0!important;">
        <h4><i class="fa fa-danger"></i> No orders active:</h4>
        You have no orders currently placed. Please place an order to see your check.
    </div>

{{/order}}
{{#order}}

    <form id="Order{{order_id}}" action="/completeOrder/{{order_id}}" method="post">
        <section class="invoice bg-gray">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> RootPrerogative
                        <small class="pull-right">{{order_start}}</small>
                    </h2>
                </div>
                <!-- /.col -->`
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-12 invoice-col">
                    <h3 style="margin-top: 0">Product â€¢ Pricing Example</h3>
                </div>
                <br><br>
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>
                            <small>RestauRants</small>
                        </strong><br>
                        Union Cir<br>
                        Denton, TX 76205<br>
                        Phone: (817) 789-3294<br>
                        Email: Gold@Team.Rules
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <br>
                    <b>Order ID:</b> {{order_id}}<br>
                    <b>Payment Due:</b>{{DATE}}<br>
                    <b>Account:</b> {{order_server}}
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#order_items}}
                            <tr>
                                <td>{{cart_id}}</td>
                                <td>{{item_name}}</td>
                                <td>{{item_description}}</td>
                                <td>{{item_price}}</td>
                            </tr>
                        {{/order_items}}
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">Payment Methods:</p>
                    <img src="/{{TEMPLATE}}dist/img/credit/visa.png" alt="Visa">
                    <img src="/{{TEMPLATE}}dist/img/credit/mastercard.png" alt="Mastercard">
                    <img src="/{{TEMPLATE}}dist/img/credit/american-express.png" alt="American Express">
                    <img src="/{{TEMPLATE}}dist/img/credit/paypal2.png" alt="Paypal">

                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        Rooted
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                    <p class="lead">SKU: {{order_id}}</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th style="width:50%">
                                    Subtotal:
                                </th>
                                <td>${{order_subtotal}}</td>
                            </tr>
                            <tr>
                                <th>Tax (8%)</th>
                                <td>${{tax}}</td>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <td>$<span id="subTotal{{order_id}}">{{order_total}}</span></td>
                            </tr>
                            <tr>
                                <th>Tip</th>
                                <td><input id="tip{{order_id}}" name="tip" type="text" value="0" class="slider form-control"
                                           data-slider-min="0"
                                           data-slider-max="50"
                                           data-slider-step="0.01" data-slider-value="{{tip}}"
                                           data-slider-orientation="horizontal"
                                           data-slider-selection="before" data-slider-tooltip="show"
                                           data-slider-id="red">
                                </td>
                            </tr>
                            <tr>
                                <th>Due:</th>
                                <td>$<span id="fullTotal{{order_id}}">{{order_total}}</span></td>
                            </tr>
                            </tbody>
                        </table>
                        <script>
                            Carbon(() => {
                                let sub = parseFloat($("#subTotal{{order_id}}").text());
                                $("#tip{{order_id}}").on("slide", function (tip) {
                                    $("#fullTotal{{order_id}}").text((parseFloat(tip.value) + sub).toFixed(2));
                                })
                            })
                        </script>
                    </div>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- this row will not appear when printing -->
            <div class="row no-print">
                <div class="col-xs-12">
                    <a onclick="window.print()" target="_blank" class="btn btn-default"><i class="fa fa-print"></i>
                        Print</a>
                    <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#modal-info">
                        <i class="fa fa-credit-card"></i>
                        Pay Check
                    </button>
                    <button onclick="window.print()" type="button" class="btn bg-black pull-right"
                            style="margin-right: 5px;">
                        <i class="fa fa-download"></i> Generate PDF
                    </button>
                </div>
            </div>
        </section>

        <div class="modal modal-info fade" id="modal-info">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Submit Card Details</h4>
                    </div>
                    <div class="modal-body">
                        <p> Remote Card Swipe... </p>
                        <p>Coupons: </p>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" placeholder="Coupons" name="lastname" value="">
                            <span class="glyphicon glyphicon-console form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                        <button data-toggle="modal" data-target="#modal-success" type="button" class="btn btn-outline"
                                data-dismiss="modal">Flip Coin
                        </button>
                        <button type="submit" class="btn btn-outline" onclick="$( '#Order{{order_id}}' ).submit()">Submit Payment</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

    </form>

    <div class="modal modal-{{#winner}}success{{/winner}}{{^winner}}info{{/winner}} fade" id="modal-success">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    {{#winner}} <h4 class="modal-title">You've won! Show this to your waiter to receive a free desert.</h4>{{/winner}}
                    {{^winner}} <h4 class="modal-title">Sorry, you didn't win. Come back and try again!</h4>{{/winner}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline" data-dismiss="modal">Flip Coin</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

{{/order}}

<!-- Bootstrap slider -->
<script>
    Carbon(() => {
        carbon.js(TEMPLATE + "plugins/bootstrap-slider/bootstrap-slider.js", () =>
                $('.slider').slider({precision: 2}))
    });
</script>