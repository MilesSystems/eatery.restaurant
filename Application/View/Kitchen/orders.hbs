<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cooks page
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box box-primary">
        <div class="box-header ui-sortable-handle" style="cursor: move;">
            <i class="ion ion-clipboard"></i>

            <h3 class="box-title">Orders On Deck</h3>

        </div>



        <!-- /.box-header -->
        <div class="box-body">
            <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
            <ul class="todo-list ui-sortable">
                {{#orders}}
                    <li>
                        <!-- drag handle -->
                        <span class="handle ui-sortable-handle">
                        <i class="fa fa-ellipsis-v"></i>
                        <i class="fa fa-ellipsis-v"></i>
                      </span>
                        <!-- checkbox -->
                        <input onclick="$.fn.startApplication('StartOrder/{{order_id}}')" type="checkbox">
                        <!-- todo text -->
                        <span class="text">{{order_session}}</span>
                        <!-- Emphasis label -->
                        <small class="label label-danger"><i class="fa fa-clock-o"></i>{{order_start}}</small>
                        <!-- General tools such as edit or delete-->
                        <div class="tools">
                            <i class="fa fa-edit" data-toggle="modal" data-target="#{{order_session}}"></i>
                            <i class="fa fa-trash-o"></i>
                        </div>
                    </li>

                    <div class="modal modal-info fade" id="{{order_session}}">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">User Comments</h4>
                            </div>
                            <div class="modal-body">
                               <p>{{order_notes}}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                {{/orders}}
            </ul>
        </div>
        <!-- /.box-body
        <div class="box-footer clearfix no-border">
            <button type="button" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add item
            </button>
        </div>-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->

<script>
    Carbon(() => {
        $.fn.CarbonJS("/Data/Vendors/almasaeed2010/adminlte/bower_components/jquery-ui/jquery-ui.min.js", () => {
            $.widget.bridge('uibutton', $.ui.button);
            // Make the dashboard widgets sortable Using jquery UI
            $('.connectedSortable').sortable({
                placeholder: 'sort-highlight',
                connectWith: '.connectedSortable',
                handle: '.box-header, .nav-tabs',
                forcePlaceholderSize: true,
                zIndex: 999999
            });
            $('.connectedSortable .box-header, .connectedSortable .nav-tabs-custom').css('cursor', 'move');

            // jQuery UI sortable for the todo list
            $('.todo-list').sortable({
                placeholder: 'sort-highlight',
                handle: '.handle',
                forcePlaceholderSize: true,
                zIndx: 999999
            });


            /* The todo list plugin from jQuery*/
            $('.todo-list').todoList({
                onCheck: function () {
                    window.console.log($(this), 'The element has been checked');
                },
                onUnCheck: function () {
                    window.console.log($(this), 'The element has been unchecked');
                }
            });

        });


    });
</script>


